<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="#2E2D2B"
        app:itemTextColor="#F8F6F9"
        app:itemIconSize="90px"
        app:itemIconTint="#F8F6F9"
        />

    <TextView
        android:id="@+id/myaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="My Account"
        android:textSize="16pt"
        android:textAlignment="center"
        android:textColor="#F8F6F9"
        android:background="#2E2D2B"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/myaccount"
    android:id="@+id/userinfo">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/myaccount"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/namauser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User5572322"
            android:textSize="10pt"
            android:textColor="#2E2D2B"
            android:layout_margin="5dp"
            />


        <TextView
            android:id="@+id/nikuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIK            : 3000000732114679"
            android:textColor="#2E2D2B"
            android:layout_margin="5dp"
            />


        <TextView
            android:id="@+id/nohpuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NO HP       : 08159141321"
            android:textColor="#2E2D2B"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/emailuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email         : User5572322@gmail.com"
            android:textColor="#2E2D2B"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/addressuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address    : Jl. Sutera Barat X, Alam Sutera "
            android:textColor="#2E2D2B"
            android:layout_margin="5dp"
            />
    </LinearLayout>


</LinearLayout>

<LinearLayout
    android:id="@+id/cfoundationbtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/userinfo">

    <TextView
        android:id="@+id/createfoundation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CREATE FOUNDATION PROFILE"
        android:textSize="8pt"
        android:textColor="#F8F6F9"
        android:background="#C65E5B"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

</LinearLayout>

    <TextView
        android:id="@+id/topdonation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/cfoundationbtn"
        android:text="Your Top Donations"
        android:textColor="#F8F6F9"
        android:background="#2E2D2B"
        android:textSize="8pt"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    <TextView
        android:id="@+id/yourtransaction"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/topdonation"
        android:text="Your Transaction"
        android:textColor="#F8F6F9"
        android:background="#2E2D2B"
        android:textSize="8pt"
        android:paddingLeft="15dp"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/transactionhistory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/yourtransaction"
        android:text="Transaction History"
        android:textColor="@color/black"
        android:background="#EFF0F2"
        android:textSize="6pt"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/transactionprogress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/transactionhistory"
        android:text="Transaction Progress"
        android:textColor="@color/black"
        android:background="#EFF0F2"
        android:textSize="6pt"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/transactionprogress"
        android:text="Donation Tracking"
        android:textColor="@color/black"
        android:background="#EFF0F2"
        android:textSize="6pt"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

</RelativeLayout>